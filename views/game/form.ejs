<%- include('../partials/header')%>
<%- include('../partials/nav')%>
<form action="/games" method="POST">
    <label for="title">Title</label>
    <input type="text" name="game[title]" >
    <label for="image">Image URL</label>
    <input type="text" name="game[image]" >
    <label for="yt">Youtube link</label>
    <input type="text" name="game[yt]">
    <label for="title">Genre</label>
    <input type="text" name="game[genre]" >
    <label for="pg">PG Ratings</label>
    <select name="game[pgRating]" id="pg">
        <option value="pg">PG</option>
        <option value="pg-13">PG-13 </option>
        <option value="rated-m">Rated M</option>
    </select>
    <label for="title">Game play</label>
    <input type="number" step="0.01" max="10" name="game[gameplay]">
    <label for="title">Storyline</label>
    <input type="number" step="0.01" max="10" name="game[storyline]" >
    <label for="title">Graphics</label>
    <input type="number" step="0.01" max="10"  name="game[graphics]" >
    <label for="comment">Your Review</label>
   <textarea name="game[review]" cols="30" rows="10"></textarea>
   <input type="submit">
</form>
<%- include('../partials/footer')%>