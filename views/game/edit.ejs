<%- include('../partials/header')%>
<link rel="stylesheet" href="/css/form.css">
<%- include('../partials/nav')%>
<h1>Edit: <%=game.title%></h1>
<form action="/games/<%=game._id%>?_method=PUT" method="POST" class="form">
    <div class="box">
        <label for="title">Title</label>
        <input type="text" name="game[title]" value="<%=game.title%>">
    </div>
<div class="box">
    <label for="image">Image URL</label>
    <input type="text" name="game[image]" value="<%=game.image%>">
</div>
<div class="box">
    <label for="image">Youtube URL</label>
    <input type="text" name="game[yt]" value="<%=game.yt%>">
</div>
<div class="box">
    <label for="title">Genre</label>
    <input type="text" name="game[genre]" value="<%=game.genre%>">
</div>
<div class="box">
    <label for="pg">PG Ratings</label>
    <select name="game[pgRating]" id="pg">
        <option value="PG">PG</option>
        <option value="PG-13">PG-13 </option>
        <option value="Rated-M">Rated M</option>
    </select>
</div>
<div class="box">
    <label for="title">Game play</label>
    <input type="number" step="0.01" max="10" name="game[gameplay]" value="<%=game.gameplay%>">
</div>
<div class="box">
    <label for="title">Storyline</label>
    <input type="number" step="0.01" max="10" name="game[storyline]" value="<%=game.storyline%>">
</div>
<div class="box">
    <label for="title">Graphics</label>
    <input type="number" step="0.01" max="10" name="game[graphics]" value="<%=game.graphics%>">
</div>
<div class="box">
    <label for="comment">Your Review</label>
    <textarea name="game[review]" cols="30" rows="10"><%=game.review%></textarea>
</div>
   
   
    
   
    
   
  
    
   
   <input type="submit">
</form>
<%- include('../partials/footer')%>